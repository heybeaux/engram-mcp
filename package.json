{
  "name": "@engram/mcp-server",
  "version": "1.0.0",
  "description": "MCP server exposing Engram memory API as tools for Claude Desktop and other MCP clients",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "engram-mcp": "./dist/index.js"
  },
  "files": [
